// documentation: https://zed.dev/docs/configuring-zed
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "vim_mode": true,
  "cursor_blink": false,
  "format_on_save": "on",
  "experimental.theme_overrides": {
    "editor.background": "#1a1b26",
    "background": "#1a1b26",
    "panel.background": "#1a1b26",
    "editor.gutter.background": "#1a1b26"
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  }
}
